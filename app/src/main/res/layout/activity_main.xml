            <ImageView
                android:id="@+id/img7"
                android:layout_width="153dp"
                android:layout_height="180dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:src="@mipmap/img7" />
            <ImageView
                android:id="@+id/img8"
                android:layout_width="153dp"
                android:layout_height="180dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
